easyblock = 'CMakeMake'

name = 'GDCM'
version = '2.8.8'

homepage = 'https://sourceforge.net/projects/gdcm'
description = "Grassroots DICOM: Cross-platform DICOM implementation"

toolchain = {'name': 'GCCcore', 'version': '6.4.0'}

source_urls = ['https://sourceforge.net/projects/%(namelower)s']
sources = [SOURCELOWER_TAR_BZ2]

builddependencies = [
    ('CMake', '3.12.1'),
]


sanity_check_paths = {
    'files': ['bin/%(name)s'],
    'dirs': [],
}

moduleclass = 'tools'
