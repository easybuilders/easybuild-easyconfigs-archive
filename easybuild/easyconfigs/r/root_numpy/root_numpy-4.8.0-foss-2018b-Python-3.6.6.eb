easyblock = 'PythonPackage'

name = 'root_numpy'
version = '4.8.0'
versionsuffix = '-Python-%(pyver)s'

homepage = 'http://scikit-hep.org/root_numpy/'
description = """root_numpy is a Python extension module that provides an efficient interface between ROOT and NumPy. root_numpyâ€™s internals are compiled C++ and can therefore handle large amounts of data much faster than equivalent pure Python implementations."""

toolchain = {'name': 'foss', 'version': '2018b'}

source_urls = [PYPI_SOURCE]
sources = [SOURCE_TAR_GZ]
checksums = [
    '5842bbcde92133f60a61f56e9f0a875a0dbc2a567cc65a9ac141ecd72e416878',  # root_numpy-4.8.0.zip
]

dependencies = [
    ('Python', '3.6.6'),
    ('ROOT', '6.14.06', versionsuffix),
    ('numpy', '1.15.0', versionsuffix),
]

moduleclass = 'math'
