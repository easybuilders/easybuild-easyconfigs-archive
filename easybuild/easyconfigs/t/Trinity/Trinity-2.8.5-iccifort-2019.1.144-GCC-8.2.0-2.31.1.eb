name = 'Trinity'
version = '2.8.5'

homepage = 'http://trinityrnaseq.github.io'
description = """Trinity represents a novel method for the efficient and robust de novo reconstruction
 of transcriptomes from RNA-Seq data. Trinity combines three independent software modules: Inchworm,
 Chrysalis, and Butterfly, applied sequentially to process large volumes of RNA-Seq reads."""

toolchain = {'name': 'iccifort', 'version': '2019.1.144-GCC-8.2.0-2.31.1'}
toolchainopts = {'optarch': True}

source_urls = ['https://github.com/trinityrnaseq/trinityrnaseq/archive/']
sources = ['%(name)s-v%(version)s.tar.gz']
patches = [
    'Trinity-2.8.5_icpc-openmp.patch',
]
checksums = [
    '449e2eaeab9af9e97c0b4e5a2142659611f57b046d4ccbf0805421ea955fc6c4',  # Trinity-v2.8.5.tar.gz
    '5a746962aba9a829b3815c9342451afa21269aff7dfef6713951dfb297001133',  # Trinity-2.8.5_icpc-openmp.patch
]

builddependencies = [
    ('Autotools', '20180311'),
    ('CMake', '3.13.3'),
]

dependencies = [
    ('Java', '1.8', '', True),
    ('ant', '1.10.5', '-Java-%(javaver)s', True),
    ('Bowtie', '1.2.2'),
    ('Bowtie2', '2.3.5.1'),
    ('ncurses', '6.1'),
    ('zlib', '1.2.11'),
    ('Perl', '5.28.1'),
]

moduleclass = 'bio'
