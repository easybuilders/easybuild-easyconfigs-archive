easyblock = 'PythonPackage'

name = 'tsne'
version = '0.1.8'
versionsuffix = '-Python-%(pyver)s'

homepage = 'https://github.com/danielfrg/tsne'
description = "Python library containing T-SNE algorithms."

toolchain = {'name': 'intel', 'version': '2019b'}
toolchainopts = {'openmp': True}

source_urls = [PYPI_SOURCE]
sources = [SOURCE_TAR_GZ]
patches = ['%(name)s-%(version)s_fix_setup_py.patch']
checksums = [
    'fa6f29fc767ec269003986115aa40713bdd5ed5feb5fe974a1c3c33a5f2a925b',  # tsne-0.1.8.tar.gz
    '0ef42134a1c1a54f18b1148dcc1d52a0b58a2563077e4638bb212f7640e14ac2',  # tsne-0.1.8_fix_setup_py.patch
]

dependencies = [
    ('Python', '2.7.16'),
    ('SciPy-bundle', '2019.10', versionsuffix),
]

download_dep_fail = True
use_pip = True
sanity_pip_check = True

check_ldshared = True

moduleclass = 'bio'
