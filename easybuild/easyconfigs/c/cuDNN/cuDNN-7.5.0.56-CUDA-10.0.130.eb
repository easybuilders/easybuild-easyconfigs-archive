checksums = ['701097882cb745d4683bb7ff6c33b8a35c7c81be31bac78f05bad130e7e0b781']
dependencies = [('CUDA', cuda_version)]

sanity_check_paths = {
    'files': ['include/cudnn.h', 'lib64/libcudnn_static.a'],
    'dirs': ['include', 'lib64'],
}

moduleclass = 'numlib'
