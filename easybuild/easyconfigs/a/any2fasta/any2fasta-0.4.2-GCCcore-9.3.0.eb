easyblock = 'CmdCp'

name = 'any2fasta'
version = '0.4.2'

homepage = 'https://github.com/tseemann/any2fasta'
description = """Convert various sequence formats to FASTA."""

toolchain = {'name': 'GCCcore', 'version': '9.3.0'}

github_account = 'tseemann'
source_urls = [GITHUB_SOURCE]
sources = ['v%(version)s.tar.gz']
checksums = ['e4cb2ddccda6298f5b0aee0c10184a75307a08b584d2abbfbf0d59d37b197e73']

dependencies = [('Perl', '5.30.2')]

skipsteps = ['build']

configure_cmd = "chmod a+x %(name)s"

files_to_copy = [
    ([name], 'bin'),
    (['test.*'], 'test'),
    'LICENSE', 'README.md',
]

sanity_check_paths = {
    'files': ['bin/%(name)s'],
    'dirs': [],
}
sanity_check_commands = ["%(name)s -h"]

moduleclass = 'bio'
