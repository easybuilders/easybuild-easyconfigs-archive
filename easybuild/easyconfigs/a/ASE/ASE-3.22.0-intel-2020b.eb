    }),
    ('Werkzeug', '2.0.1', {
        'checksums': ['1de1db30d010ff1af14a009224ec49ab2329ad2cde454c8a708130642d579c42'],
    }),
    ('click', '7.1.2', {
        'checksums': ['d2b5255c7c6349bc1bd1e59e08cd12acbbd63ce649f2588755783aa94dfb6b1a'],
    }),
    ('itsdangerous', '2.0.1', {
        'checksums': ['9e724d68fc22902a1435351f84c3fb8623f303fffcc566a4cb952df8c572cff0'],
    }),
    ('Flask', '1.1.2', {
        'checksums': ['4efa1ae2d7c9865af48986de8aeb8504bf32c7f3d6fdc9353d34b21f4b127060'],
    }),
    ('pytest-mock', '3.6.1', {
        'checksums': ['40217a058c52a63f1042f0784f62009e976ba824c418cced42e88d5f40ab0e62'],
